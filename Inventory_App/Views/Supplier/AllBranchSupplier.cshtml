@model IEnumerable<Inventory_App.Models.SupplierMV>

@{
    ViewBag.Title = "Branch Supplier";
}


<div class="card">
    <div class="card-header">
        <div class="card-title">Branch Supplier</div>


    </div>
    <div class="card-body">
        <div>@Html.ActionLink("New Supplier", "CreateBranchSupplier", null, new { @class = "btn btn-primary" })</div>
        <hr />
        <table class="table table-striped my-4 w-100" id="datatable2">
            <thead>
                <tr>
                    <th>
                        Supplier
                    </th>
                    <th>
                        Contact No
                    </th>
                    <th>
                       Email
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Created By
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SupplierName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SupplierConatctNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SupplierEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SupplierAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Discription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditBranchSupplier", new { id = item.SupplierID }, new { @class = "btn btn-warning" })
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </div>
</div>